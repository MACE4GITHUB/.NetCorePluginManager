@model UserAccount.Plugin.Models.DeliveryAddressViewModel

@{
    ViewData["Title"] = "DeliveryAddress";
}

<h2>Delivery Addresses</h2>

<link rel="stylesheet" href="/css/Account.css" />

<div class="accountGrid">
    <table>
        <thead>
            <tr>
                <th>Address Line 1</th>
                <th>City</th>
                <th>Country</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Middleware.DeliveryAddress address in Model.Addresses)
            {
                <tr>
                    <td>@address.AddressLine1</td>
                    <td>@address.City</td>
                    <td>@address.Country</td>
                    <td><a href="/Account/DeliveryAddressEdit/@address.AddressId">edit</a></td>
                    <td><a href="/Account/DeliveryAddressDelete/@address.AddressId">delete</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script src="/js/growl.js" type="text/javascript"></script>
<link href="/css/growl.css" rel="stylesheet" type="text/css" />
<script type="text/javascript">
    $(document).ready(function () {
        var gr = '@Model.GrowlMessage';

        if (gr !== '')
            $.growl.notice({ title: 'Account Updated', message: gr });
    });
</script>
