@model UserAccount.Plugin.Models.DownloadViewModel
@{
    ViewData["Title"] = "Downloads";
}

<h2>Downloads</h2>

<link rel="stylesheet" href="/css/Account.css" />

<div class="accountTab">
    @foreach(Middleware.Downloads.DownloadCategory category in Model.Categories)
    {
        string className = category.Name == Model.ActiveCategory ? "active" : "";
        <button class="@className" onclick="window.location.href='/Account/Downloads/@category.Id';">@category.Name</button>
    }
</div>

<div class="accountTabContent active">
    <div class="account-block">
        @foreach (UserAccount.Plugin.Models.ViewDownloadViewItem download in Model.Downloads)
        {
            <a href="/Account/DownloadView/@download.Id">
                <div class="dload">
                    <div class="icon"><img src="@download.Icon" border="0" /></div>
                    <h3>@download.Name</h3>
                    <p>@download.Description</p>
                </div>
            </a>
        }
    </div>
    <div class="fixed"></div>
</div>