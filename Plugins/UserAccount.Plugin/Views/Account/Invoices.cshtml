@model UserAccount.Plugin.Models.InvoicesViewModel
@{
    ViewData["Title"] = "Invoices";
}

<div class="bc">@Html.Raw(Model.BreadcrumbData())</div>

<h2>@Languages.LanguageStrings.Orders</h2>

<link rel="stylesheet" href="/css/Account.css" />

<div class="accountGrid">
    <table>
        <thead>
            <tr>
                <th>@Languages.LanguageStrings.InvoiceNumber</th>
                <th>@Languages.LanguageStrings.Date</th>
                <th>@Languages.LanguageStrings.Status</th>
                <th>@Languages.LanguageStrings.Items</th>
                <th>@Languages.LanguageStrings.Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Middleware.Accounts.Invoices.Invoice invoice in Model.Invoices)
            {
                <tr>
                    <td>@invoice.Id</td>
                    <td>@invoice.Date.ToString(System.Threading.Thread.CurrentThread.CurrentUICulture.DateTimeFormat)</td>
                    <td>@Shared.Utilities.SplitCamelCase(invoice.Status.ToString())</td>
                    <td>@invoice.ItemCount.ToString()</td>
                    <td>@Shared.Utilities.FormatMoney(invoice.Total, invoice.Culture)</td>
                    <td><a href="/Account/InvoiceView/@invoice.Id">@Languages.LanguageStrings.View</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
