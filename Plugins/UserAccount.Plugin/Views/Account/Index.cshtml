@model UserAccount.Plugin.Models.AccountViewModel
@{
    ViewData["Title"] = "Account";
}

<h2>Account</h2>

<link rel="stylesheet" href="/css/Account.css" />

<div class="accountContent">
    <ul class="accountOptions fixed">
        <li class="email"><a href="/Account/UserContactDetails">Contact Details</a></li>
        <li class="password"><a href="/Account/ChangePassword">Change Password</a></li>

        @if (Model.Settings.ShowBillingAddress)
        {
            <li class="billing"><a href="/Account/BillingAddress">Billing Address</a></li>
        }

        @if (Model.Settings.ShowDeliveryAddress)
        {
            <li class="delivery"><a href="/Account/DeliveryAddress">Delivery Address</a></li>
        }

        @if (Model.Settings.ShowSpecialOffers)
        {
            <li class="offers"><a href="/Account/SpecialOffers">Special Offers</a></li>
        }

        @if (Model.Settings.ShowOrders)
        {
            <li class="orders"><a href="/Account/Orders">Orders</a></li>
        }

        @if (Model.Settings.ShowInvoices)
        {
            <li class="invoices"><a href="/Account/Invoices">Invoices</a></li>
        }

        @if (Model.Settings.ShowCreditCards)
        {
            <li class="creditcards"><a href="/Account/CreditCard">Credit Card</a></li>
        }

        @if (Model.Settings.ShowSupportTickets)
        {
            <li class="tickets"><a href="/Account/SupportTickets">Support Tickets</a></li>
        }

        @if (Model.Settings.ShowDownloads)
        {
            <li class="download"><a href="/Account/Downloads">Downloads</a></li>
        }

        @if (Model.Settings.ShowLicences)
        {
            <li class="licence"><a href="/Account/Licences">Licenses</a></li>
        }
    </ul>
</div>

<script src="/js/growl.js" type="text/javascript"></script>
<link href="/css/growl.css" rel="stylesheet" type="text/css" />
<script type="text/javascript">
    $(document).ready(function () {
        var gr = '@Model.GrowlMessage';

        if (gr !== '')
            $.growl.notice({ title: 'Account Updated', message: gr });
    });
</script>


