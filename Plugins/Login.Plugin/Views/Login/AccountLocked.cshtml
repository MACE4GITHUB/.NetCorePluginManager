@model LoginPlugin.Models.AccountLockedViewModel

@{
    ViewData["Title"] = "AccountLocked";
}

<h2>@Languages.LanguageStrings.AccountLocked</h2>
<link rel="stylesheet" href="/css/login.css" />

<div>@Html.ValidationSummary(true)</div>


@using (Html.BeginForm("AccountLocked", "Login", FormMethod.Post))
{
    @Html.HiddenFor(m => m.Username)
    <div class="login-block">
        <p>@Languages.LanguageStrings.AccountLockedDescription</p>
    </div>
    <div class="login-block">
        <div class="login-row">
            @Html.LabelFor(m => m.UnlockCode)
        </div>
        <div class="login-row">
            @Html.TextBoxFor(m => m.UnlockCode) @Html.ValidationMessageFor(m => m.UnlockCode)
        </div>
    </div>
    <div class="login-block">
        <input type="submit" value="@Languages.LanguageStrings.Unlock" />
    </div>
}
