@model HelpdeskPlugin.Models.IndexViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = @Localizer[nameof(Languages.LanguageStrings.Helpdesk)];
}

<div class="bc">@Html.Raw(Model.BreadcrumbData())</div>

<h2>@Localizer[nameof(Languages.LanguageStrings.Helpdesk)]</h2>

<link rel="stylesheet" href="/css/Account.css" />
<script src="~/js/helpdesk.js"></script>

<div class="accountContent">
    <ul class="accountOptions fixed">
        <li class="email"><a href="/Account/UserContactDetails">@Localizer[nameof(Languages.LanguageStrings.ContactDetails)]</a></li>
        <li class="password"><a href="/Account/ChangePassword">@Localizer[nameof(Languages.LanguageStrings.ChangePassword)]</a></li>

        @if (Model.ShowTickets)
        {
            <li class="findTicket"><a href="/Helpdesk/FindTicket">@Localizer[nameof(Languages.LanguageStrings.FindATicket)]</a></li>
            <li class="newTicket"><a href="/Helpdesk/Ticket">@Localizer[nameof(Languages.LanguageStrings.SubmitATicket)]</a></li>
        }

        @if (Model.ShowFaq)
        {
            <li class="faq"><a href="/Helpdesk/Faq">@Localizer[nameof(Languages.LanguageStrings.FrequentlyAskedQuestions)]</a></li>
        }

        @if (Model.ShowFeedback)
        {
            <li class="feedback"><a href="/Helpdesk/Feedback">@Localizer[nameof(Languages.LanguageStrings.Feedback)]</a></li>
        }
    </ul>
</div>

<script src="/js/growl.js" type="text/javascript"></script>
<link href="/css/growl.css" rel="stylesheet" type="text/css" />
<script type="text/javascript">
    var settings = {
        growlTitle: '@Localizer[nameof(Languages.LanguageStrings.Helpdesk)]',
        updateMsg: '@Model.GrowlMessage'
    };

    helpdesk.init(settings);
</script>


