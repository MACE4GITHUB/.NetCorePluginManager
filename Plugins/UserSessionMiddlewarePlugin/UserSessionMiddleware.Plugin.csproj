<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.1</TargetFramework>
    <AssemblyName>UserSessionMiddleware.Plugin</AssemblyName>
    <RootNamespace>UserSessionMiddleware.Plugin</RootNamespace>
    <LangVersion>latest</LangVersion>
    <RepositoryUrl>https://github.com/k3ldar/.NetCorePluginManager</RepositoryUrl>
    <PackageLicenseUrl>https://github.com/k3ldar/.NetCorePluginManager/blob/master/LICENSE</PackageLicenseUrl>
    <Copyright>Copyright (c) 2018.  Simon Carter.  All rights reserved.</Copyright>
    <Authors>Simon Carter</Authors>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageReleaseNotes>DotNetCore User Session Manager Middleware Version 1</PackageReleaseNotes>
    <PackageTags>asp net core plugin manager user session manager middleware plugin</PackageTags>
    <Description>User Session Manager middleware retains user session information within ASP.Net Core websites.</Description>
    <Version>1.0.1</Version>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DefineConstants>DEBUG;TRACE</DefineConstants>
    <CheckForOverflowUnderflow>true</CheckForOverflowUnderflow>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <CheckForOverflowUnderflow>true</CheckForOverflowUnderflow>
    <DefineConstants />
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="AspNetCore.PluginManager" Version="1.0.2" />
    <PackageReference Include="SC.Shared.Library.Core" Version="2.6.1" />
    <PackageReference Include="SharedPluginFeatures" Version="1.0.4" />
  </ItemGroup>

</Project>
