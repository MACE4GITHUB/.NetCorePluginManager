@model Blog.Plugin.Models.BlogPostViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
<div class="row">
    <div class="col-sm-2">
        <div class="blogTags">
            <h3>@Localizer[nameof(Languages.LanguageStrings.Tags)]</h3>
            <ul>
                @foreach (string tag in Model.Tags.Split(' '))
                {
                    <li><a href="/Blog/Search/@tag/">@tag</a></li>
                }
            </ul>

            @if (Model.IsLoggedIn)
            {
                <h3>@Localizer[nameof(Languages.LanguageStrings.Options)]</h3>
                <ul>
                    <li><a href="/Blog/Edit">@Localizer[nameof(Languages.LanguageStrings.New)]</a></li>
                </ul>
            }
        </div>
        </div>
        <div class="col-sm-10">
            <div class="blogTitle">
                <h2><a href="@Model.Url">@Model.Title</a><br /><span>@Localizer[nameof(Languages.LanguageStrings.Published)]: @Model.PublishDateTime.ToString()</span></h2>
            </div>
            <div class="blogBody">
                <p>@Model.Excerpt <span><a href="@Model.Url">@Localizer[nameof(Languages.LanguageStrings.SeeMore)]</a></span></p>
            </div>
            @if (Model.CanEdit)
            {
                <div class="blogEdit">
                    <p>
                        <span><a href="/Blog/Edit/@Model.Id/">@Localizer[nameof(Languages.LanguageStrings.Edit)]</a></span>
                        <span><a href="/Blog/Delete/@Model.Id/">@Localizer[nameof(Languages.LanguageStrings.Delete)]</a></span>
                    </p>
                </div>
            }
        </div>
    </div>
