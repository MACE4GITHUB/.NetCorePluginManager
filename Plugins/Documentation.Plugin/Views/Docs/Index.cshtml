@model DocumentationPlugin.Models.IndexViewModel
@using SharedPluginFeatures;
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer[nameof(Languages.LanguageStrings.APIReference)];
}
<div class="bc">@Html.Raw(Model.BreadcrumbData())</div>

<link rel="stylesheet" type="text/css" href="/css/documentation.css" />

<h2>@Localizer[nameof(Languages.LanguageStrings.APIReference)]</h2>

<div class="container">
    <div class="row">
        <div class="col-sm-1 col-md-12">
            Description of documentation here
        </div>
    </div>
    <div class="row">
        @foreach (var item in Model.AssemblyNames)
        {
            <div class="col-md-2">
                <div class="docModules">
                    <a href="/Docs/Document/@Html.RouteFriendlyName(item.Key)/">
                        <h3>@item.Key</h3>
                        <span class="overlay">@item.Value</span>
                    </a>
                </div>
            </div>
        }
    </div>
</div>



