@model ErrorManager.Plugin.Models.Error.Error404Model
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = "Error404";
}

<link rel="stylesheet" href="/css/error.css" />

<div class="row">
    <div class="col-sm-12">
        <h2>@Localizer[nameof(Languages.LanguageStrings.NotFound404)]</h2>
    </div>
</div>

<div class="errorMessage">
    @if (!String.IsNullOrEmpty(Model.Image))
    {
        <div class="row">
            <div class="col-sm-12">
                <img src="@Model.Image" alt="Missing Link" />
            </div>
        </div>
    }

    @if (!String.IsNullOrEmpty(Model.Message))
    {
        <div class="row">
            <div class="col-sm-12">
                @Html.Raw(Model.Message)
            </div>
        </div>
    }
    <div class="row">
        <div class="col-sm-12">

            <p><a href="/">@Localizer[nameof(Languages.LanguageStrings.ClickHere)]</a> @Localizer[nameof(Languages.LanguageStrings.ToGoHome)]</p>
        </div>
    </div>
</div>
