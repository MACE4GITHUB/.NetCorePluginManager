@model DownloadPlugin.Models.DownloadModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@using DownloadPlugin.Models
@{
    ViewData["Title"] = "Index";
}
<div class="bc">@Html.Raw(Model.BreadcrumbData())</div>

<link rel="stylesheet" href="~/css/Downloads.css" asp-append-version="true" />

<div class="wrapper">
    <div class="content">

        @await Html.PartialAsync("_LeftMenu.cshtml")


        <div class="mainContent">

            <h1 id="divTitle">@Model.Category @Localizer[nameof(Languages.LanguageStrings.Downloads)]</h1>
            <ul class="downloadList fixed">
                @foreach (DownloadableItem item in Model.Downloads)
                {
                    <li class="download">
                        <a href="/Download/File/@item.Id/@Model.RouteText(item.Name)">
                            <img src="~/images/Download/@item.Icon" alt="@item.Name" border="0" width="122" height="122" />
                            <br />@item.Name @item.Version<br /><strong>@item.Size</strong>
                        </a>
                    </li>
                }
            </ul>

            <div class="pagination">
                <ul class="fixed">
                    @Html.Raw(Model.Pagination)
                </ul>
            </div><!-- end of .pagination -->

        </div><!-- end of #mainContent -->


        <div class="clear"><!-- clear --></div>

    </div><!-- end of #content -->
</div>
<div class="clear"><!-- clear --></div>

