@model HelpdeskPlugin.Models.SubmitTicketViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer[nameof(Languages.LanguageStrings.SubmitTicket)];

    object readonlyUser;

    if (Model.ReadonlyUser)
    {
        readonlyUser = new { @readonly = "readonly" };
    }
    else
    {
        readonlyUser = new { };
    }
}

<div class="bc">@Html.Raw(Model.BreadcrumbData())</div>

<link rel="stylesheet" href="/css/Helpdesk.css" />
<script src="~/js/helpdesk.js"></script>


<h2>@Localizer[nameof(Languages.LanguageStrings.SubmitTicket)]</h2>

<div class="helpdeskContent">
    <div class="helpdesk-row">
        <p>@Localizer[nameof(Languages.LanguageStrings.HelpdeskLeaveFeedbackDescription)]</p>
        <p>@Localizer[nameof(Languages.LanguageStrings.NotSupportArea)] @Html.ActionLink(Localizer[Languages.LanguageStrings.SupportTicket].Value, nameof(HelpdeskPlugin.Controllers.HelpdeskController.SubmitTicket), HelpdeskPlugin.Controllers.HelpdeskController.Name)</p>
        <p>@Localizer[nameof(Languages.LanguageStrings.AbridgedWarning)]</p>
    </div>
    @using (Html.BeginForm(nameof(HelpdeskPlugin.Controllers.HelpdeskController.SubmitTicket), HelpdeskPlugin.Controllers.HelpdeskController.Name, FormMethod.Post))
    {
        <div class="helpdesk-block">
            <div class="helpdesk-row">
                <p>@Localizer[nameof(Languages.LanguageStrings.Name)]</p>
            </div>
            <div class="helpdesk-row">
                @Html.TextBoxFor(m => m.Username, readonlyUser)  @Html.ValidationMessageFor(m => m.Username)
            </div>
            <div class="helpdesk-row">
                <p>@Localizer[nameof(Languages.LanguageStrings.Email)]</p>
            </div>
            <div class="helpdesk-row">
                @Html.TextBoxFor(m => m.Email, readonlyUser)  @Html.ValidationMessageFor(m => m.Email)
            </div>
            <div class="helpdesk-row">
                <p>@Localizer[nameof(Languages.LanguageStrings.Department)]</p>
            </div>
            <div class="helpdesk-row">
                @Html.DropDownListFor(m => m.Department, new SelectList(Model.Departments, "Id", "Description")) @Html.ValidationMessageFor(m => m.Department)
            </div>
            <div class="helpdesk-row">
                <p>@Localizer[nameof(Languages.LanguageStrings.Priority)]</p>
            </div>
            <div class="helpdesk-row">
                @Html.DropDownListFor(m => m.Priority, new SelectList(Model.Priorities, "Id", "Description")) @Html.ValidationMessageFor(m => m.Priority)
            </div>
            <div class="helpdesk-row">
                <p>@Localizer[nameof(Languages.LanguageStrings.Subject)]</p>
                @Html.TextBoxFor(m => m.Subject)
                @Html.ValidationMessageFor(m => m.Subject)
            </div>
            <div class="helpdesk-row">
                <p>@Localizer[nameof(Languages.LanguageStrings.Message)]</p>
            </div>
            <div class="helpdesk-row">
                @Html.TextAreaFor(m => m.Message)
                @Html.ValidationMessageFor(m => m.Message)
            </div>
            <div class="helpdesk-row">
                <p>@Localizer[nameof(Languages.LanguageStrings.Code)]</p>
            </div>
            <div class="helpdesk-row">
                <img src="/Helpdesk/GetCaptchaImage/" />
            </div>
            <div class="helpdesk-row">
                @Html.TextBoxFor(m => m.CaptchaText) @Html.ValidationMessageFor(m => m.CaptchaText)
                @Html.ValidationMessageFor(m => m.CaptchaText)
            </div>
            <div class="helpdesk-row">
                <input type="submit" value="@Localizer[nameof(Languages.LanguageStrings.Submit)]" />
            </div>
        </div>
    }
</div>
